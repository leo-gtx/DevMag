{% extends 'base.html.twig' %}
 
{% block title %}{% trans %}Forgotten Password{% endtrans %}{% endblock %}
 
{% block body %}
<div class="container" style="display:flex;justify-content:center;flex-direction:column;padding-top:70px;">
    <div class="jumbotron">
<!-- Header -->
<header class="container-fluid" >
    <div class="row">
        <div class='col-12'>
            <h1 class="my-4">{% trans %}Forgotten Password{% endtrans %}</h1>
        </div>
    </div>
</header>
<!-- Content -->
<section id="article" class="container-fluid pb-4">
	<div class="container">
		<div class="row">
			<div class="col-12">
                <p>{% trans %}To reinitialize your password, enter your email below{% endtrans %}</p>
                {{ form(emailForm) }}
            </div>
        </div>
    </div>
</section>
</div>
</div>
{% endblock %}