{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Contact{% endblock %}

{% block body %}
    <div class="page-title lb single-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                        <h2><i class="fa fa-envelope-open-o bg-orange"></i>{% trans %}Contact Us{% endtrans %}<small class="hidden-xs-down hidden-sm-down"></small></h2>
                    </div><!-- end col -->
                    <div class="col-lg-4 col-md-4 col-sm-12 hidden-xs-down hidden-sm-down">
                       {% for message in app.flashes('message') %}
                            <div class="alert alert-success" role="alert">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div><!-- end col -->                    
                </div><!-- end row -->
            </div><!-- end container -->
    </div><!-- end page-title -->

    <section class="section wb">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-wrapper">
                            <div class="row">
                                <div class="col-lg-5">

                                    <div class="custombox authorbox clearfix">
                                <h4 class="small-title">{% trans %}Who we are{% endtrans %}</h4>
                                <div class="row">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                        <img src="{{ asset('images/author.jpg')}}" alt="" height="400px" width="400px" class="img-fluid rounded-circle"> 
                                    </div><!-- end col -->

                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                        <h4>NGUEFACK Leonel</h4>
                                        <p>{% trans %}I am the founder of DevMag, a software engineer specialised in web and mobile development. I had created DevMag Blog to share my knowlegde and my experience with you. Thank you to stop on DevMag.{% endtrans %}</p>
                                        <div class="topsocial">
                                            <a href="https://www.linkedin.com/in/leonel-nguefack-btech-41b7411ab/" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Linkedin"><i class="fa fa-linkedin"></i></a>
                                            <a href="https://twitter.com/nguefack_leonel" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Twitter"><i class="fa fa-twitter"></i></a>
                                            <a href="https://www.instagram.com/leonel.ndl/" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Instagram"><i class="fa fa-instagram"></i></a>
                                        </div><!-- end social -->

                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div>
                   
                                    <div class="custombox authorbox clearfix">
                                <h4 class="small-title">{% trans %}How we help?{% endtrans %}</h4>
                                <div class="row">

                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                        <h4><a href="#">{% trans %}Contact us anytime{% endtrans %}</a></h4>
                                        <p>{% trans %}You can write us about a particular problem or your projects we will make the possible for you. You can also make a suggestion about DevMag activities.{% endtrans %}</p>

                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div>
                                   
                                </div>
                                <div class="col-lg-7">
                                   {{ form(contactForm) }}
                                </div>
                            </div>
                        </div><!-- end page-wrapper -->
                    </div><!-- end col -->
                </div><!-- end row -->
            </div><!-- end container -->
        </section>

    
{% endblock %}
